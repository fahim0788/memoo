# =============================================================================
# Configuration de production - Raspberry Pi
# Copiez ce fichier vers .env et remplissez les valeurs
# =============================================================================

# Domaine
DOMAIN=memoo.fr

# Base de données PostgreSQL
POSTGRES_DB=memolist
POSTGRES_USER=memolist
POSTGRES_PASSWORD=CHANGE_ME_SECURE_PASSWORD_HERE

# Connection string pour Prisma
# ⚠️ Recopiez les valeurs manuellement ci-dessous (pas de variables ${} !)
DATABASE_URL=postgresql://memolist:CHANGE_ME_SECURE_PASSWORD_HERE@db:5432/memolist

# JWT Secret (minimum 32 caractères aléatoires)
JWT_SECRET=CHANGE_ME_RANDOM_SECRET_KEY_MIN_32_CHARS

# CORS Origin (votre domaine en production)
CORS_ORIGIN=https://memoo.fr

# Next.js
NODE_ENV=production

# -----------------------------------------------------------------------------
# Storage TTS (MinIO en production)
# -----------------------------------------------------------------------------
STORAGE_TYPE=minio

# MinIO config
MINIO_ENDPOINT=minio
MINIO_PORT=9000
MINIO_USE_SSL=false
MINIO_ACCESS_KEY=CHANGE_ME_MINIO_ACCESS_KEY
MINIO_SECRET_KEY=CHANGE_ME_MINIO_SECRET_KEY
MINIO_BUCKET=memolist-tts

# URL publique des fichiers audio
PUBLIC_BASE_URL=https://memoo.fr/storage/tts
