generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

/**
 * Schema avec authentification email/password + OAuth (Google, Apple)
 */
model User {
  id           String   @id @default(cuid())
  email        String   @unique
  firstName    String
  lastName     String
  password     String?
  authProvider String   @default("EMAIL")
  isActive     Boolean  @default(true)
  role         String   @default("USER") // USER, ADMIN
  emailVerified             Boolean   @default(false)
  verificationCode          String?
  verificationCodeExpiresAt DateTime?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  reviews    Review[]
  userDecks  UserDeck[]
  ownedDecks Deck[]
  events     Event[]
  certificationRequests CertificationRequest[]
}

model Deck {
  id           String   @id @default(cuid())
  name         String
  ownerId      String?
  aiVerify     Boolean  @default(true)
  allowedModes Json?
  certificationRequestId String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  owner     User?      @relation(fields: [ownerId], references: [id], onDelete: Cascade)
  cards     Card[]
  chapters  Chapter[]
  userDecks UserDeck[]
  certificationRequest CertificationRequest? @relation(fields: [certificationRequestId], references: [id], onDelete: SetNull)
}

model Card {
  id           String   @id @default(cuid())
  deckId       String
  chapterId    String?
  question     String
  answers      Json     @default("[]")
  distractors  Json     @default("[]")
  fillBlanks   Json?
  allowedModes Json?
  aiVerify     Boolean?
  audioUrlEn   String?
  audioUrlFr   String?
  imageUrl     String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  deck      Deck     @relation(fields: [deckId], references: [id], onDelete: Cascade)
  chapter   Chapter? @relation(fields: [chapterId], references: [id], onDelete: SetNull)
  reviews   Review[]
}

model Chapter {
  id          String   @id @default(cuid())
  deckId      String
  name        String
  description String?
  position    Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  deck  Deck   @relation(fields: [deckId], references: [id], onDelete: Cascade)
  cards Card[]

  @@index([deckId, position])
}

model Review {
  id         String   @id @default(cuid())
  cardId     String
  ok         Boolean
  userAnswer String
  reviewedAt DateTime @default(now())

  userId     String?
  user       User?    @relation(fields: [userId], references: [id], onDelete: Cascade)
  card       Card?    @relation(fields: [cardId], references: [id], onDelete: Cascade)
}

model UserDeck {
  id        String   @id @default(cuid())
  userId   String
  deckId    String
  position  Int      @default(0)
  icon      String?
  createdAt DateTime @default(now())

  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  deck      Deck     @relation(fields: [deckId], references: [id], onDelete: Cascade)

  @@unique([userId, deckId])
  @@index([userId, position])
}

model TtsJob {
  id             String   @id @default(cuid())
  userId         String?
  deckId         String?
  status         String   @default("pending") // pending, processing, completed, failed
  totalPhrases   Int
  processedCount Int      @default(0)
  errorMessage   String?
  phrases        Json     // [{textEn: string, textFr: string, cardId?: string}]
  resultUrls     Json?    // [{cardId: string, audioUrlEn: string, audioUrlFr: string}]
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  startedAt      DateTime?
  completedAt    DateTime?

  @@index([status, createdAt])
}

/**
 * Event journal for funnel tracking (anonyme - pas d'IP)
 */
model Event {
  id        String   @id @default(cuid())
  userId    String?  // null si utilisateur anonyme
  sessionId String   // Identifiant de session anonyme
  type      String   // "PAGE_VISITED", "REGISTRATION_STARTED", "REGISTRATION_COMPLETED", "EMAIL_VERIFICATION_SENT", "REMINDER_1_SENT", etc.
  category  String   // "AUTH", "CLEANUP", "EMAIL", "SYSTEM"
  action    String?  // Action spécifique (ex: "LOGIN_PAGE_VIEWED", "REGISTRATION_FORM_SUBMITTED")
  status    String   @default("pending") // pending, success, failed
  metadata  Json?    // Données additionnelles {email, path, referrer, etc}
  error     String?  // Message d'erreur si status = failed
  createdAt DateTime @default(now())

  user      User?    @relation(fields: [userId], references: [id], onDelete: SetNull)

  @@index([userId, category])
  @@index([type, createdAt])
  @@index([status, createdAt])
  @@index([sessionId, createdAt])
}

/**
 * Certification generation requests (admin-triggered)
 */
model CertificationRequest {
  id        String   @id @default(cuid())
  adminId   String   // Admin qui déclenche
  certCode  String   // AZ-900, AWS-SAA, etc (ex: "AZ-900")
  status    String   @default("pending") // pending, processing, success, failed
  deckId    String?  // Deck créé (une fois success)
  errorLog  String?  // Raison d'échec
  metadata  Json?    // {source, validationsRun, timestamps, etc}
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  admin     User     @relation(fields: [adminId], references: [id], onDelete: Cascade)
  decks     Deck[]

  @@index([status, createdAt])
  @@index([adminId, createdAt])
  @@unique([certCode])
}
