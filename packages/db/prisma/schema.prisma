generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

/**
 * Schema avec authentification email/password
 */
model User {
  id        String   @id @default(cuid())
  email     String   @unique
  firstName String
  lastName  String
  password  String
  isActive  Boolean  @default(true)
  emailVerified             Boolean   @default(false)
  verificationCode          String?
  verificationCodeExpiresAt DateTime?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  reviews    Review[]
  userDecks  UserDeck[]
  ownedDecks Deck[]
}

model Deck {
  id        String   @id @default(cuid())
  name      String
  ownerId   String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  owner     User?      @relation(fields: [ownerId], references: [id], onDelete: Cascade)
  cards     Card[]
  chapters  Chapter[]
  userDecks UserDeck[]
}

model Card {
  id          String   @id @default(cuid())
  deckId      String
  chapterId   String?
  question    String
  answers     Json     @default("[]")
  distractors Json     @default("[]")
  audioUrlEn  String?
  audioUrlFr  String?
  imageUrl    String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  deck      Deck     @relation(fields: [deckId], references: [id], onDelete: Cascade)
  chapter   Chapter? @relation(fields: [chapterId], references: [id], onDelete: SetNull)
  reviews   Review[]
}

model Chapter {
  id          String   @id @default(cuid())
  deckId      String
  name        String
  description String?
  position    Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  deck  Deck   @relation(fields: [deckId], references: [id], onDelete: Cascade)
  cards Card[]

  @@index([deckId, position])
}

model Review {
  id         String   @id @default(cuid())
  cardId     String
  ok         Boolean
  userAnswer String
  reviewedAt DateTime @default(now())

  userId     String?
  user       User?    @relation(fields: [userId], references: [id], onDelete: Cascade)
  card       Card?    @relation(fields: [cardId], references: [id], onDelete: Cascade)
}

model UserDeck {
  id        String   @id @default(cuid())
  userId   String
  deckId    String
  position  Int      @default(0)
  icon      String?
  createdAt DateTime @default(now())

  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  deck      Deck     @relation(fields: [deckId], references: [id], onDelete: Cascade)

  @@unique([userId, deckId])
  @@index([userId, position])
}

model TtsJob {
  id             String   @id @default(cuid())
  userId         String?
  deckId         String?
  status         String   @default("pending") // pending, processing, completed, failed
  totalPhrases   Int
  processedCount Int      @default(0)
  errorMessage   String?
  phrases        Json     // [{textEn: string, textFr: string, cardId?: string}]
  resultUrls     Json?    // [{cardId: string, audioUrlEn: string, audioUrlFr: string}]
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  startedAt      DateTime?
  completedAt    DateTime?

  @@index([status, createdAt])
}
